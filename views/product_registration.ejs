                            </div> 
                            <!-- 파일등록 -->
                            <input id="fileName4" class="form-control" value="파일선택" disabled="disabled" style="width:100%; display: inline-block;">
                            <div class="fileRegiBtn">
                                <label for="myFileUp4" style="width:100%">사진 등록</label>
                                <input type="file" id="myFileUp4" name="img4" onclick="fileUploadAction4();">
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <input type="button" class="btn btn-primary pull-right" style="margin-left: 10px" value="취소" onclick="location.href='/categories'">
            <input type="submit" class="btn btn-primary pull-right" value="등록">
            <script>
                $(document).ready(function() {
                    $("#myFileUp1").on("change", imgUpdate1);
                });
                $(document).ready(function() {
                    $("#myFileUp2").on("change", imgUpdate2);
                });
                $(document).ready(function() {
                    $("#myFileUp3").on("change", imgUpdate3);
                });
                $(document).ready(function() {
                    $("#myFileUp4").on("change", imgUpdate4);
                });
                function fileUploadAction1() {
                    $("#myFileUP1").trigger("click");
                }
                function fileUploadAction2() {
                    $("#myFileUP2").trigger("click");
                }
                function fileUploadAction3() {
                    $("#myFileUP3").trigger("click");
                }
                function fileUploadAction4() {
                    $("#myFileUP4").trigger("click");
                }
                function imgUpdate1(input) {
                    if (input.files && input.files[0]) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $('#cover1').attr('src', e.target.result); //cover src로 붙여지고
                            $('#fileName1').val(input.files[0].name);  //파일선택 form으로 파일명이 들어온
                        }
                        reader.readAsDataURL(input.files[0]);
                    }
                }
                $("#myFileUp1").change(function () {
                    imgUpdate1(this);
                });
